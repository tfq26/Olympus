{
	"servers": {
		"time": {
			"command": "docker",
			"args": [
				"run",
				"-i",
				"--rm",
				"mcp/time"
			],
			"type": "stdio"
		},
		"terraform": {
			"command": "${workspaceFolder}/.venv/bin/python",
			"args": [
				"${workspaceFolder}/mcps/terraform/server/mcp_server.py"
			],
			"type": "stdio",
			"env": {
				"PYTHONUNBUFFERED": "1"
			}
		}
	}
}